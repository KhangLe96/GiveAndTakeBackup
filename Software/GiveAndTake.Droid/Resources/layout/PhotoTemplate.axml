<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:local="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="@dimen/basic_margin">
	<giveandtake.droid.controls.CustomSquareRoundedImageView
		android:id="@+id/item_img"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		local:riv_corner_radius="10dp"
		local:MvxBind="ImageBase64Data ImageBase64Data; ImageUrlData ImageUrlData"/>
	<ImageView
		android:background="@drawable/btn_delete_photo"
		android:id="@+id/delete_btn"
		android:layout_alignParentRight="true"
		android:layout_height="@dimen/button_small_width"
		android:layout_width="@dimen/button_small_width"
		local:MvxBind="Click DeleteAPhotoCommand"/>
</RelativeLayout>
